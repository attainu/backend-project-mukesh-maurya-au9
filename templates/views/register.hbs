<!DOCTYPE html>
<html lang="en">

{{>main}}

<body>
    {{!-- navbar --}}

    {{>navbar}}

    {{!-- signup form --}}
    <div class="design top">

        <form onsubmit="return myFunc();" class="px-4 py-3" action="/signup" method="post">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="checkfirst" class="form-control" name="firstName" placeholder="Enter first name"
                    value="">
                <span id="message"></span>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" id="checklast" class="form-control" name="lastName" placeholder="Enter last name"
                    value="">
                <span id="message2"></span>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" name="email" id="Email1" required="required"
                    placeholder="email@example.com" value="">
            </div>
            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="number" class="form-control" name="phone" id="phone" placeholder="Enter number" value={{phone}}>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" id="password1" placeholder="Password" value="">
            </div>
            <div class="form-group">
                <label for="rePassword">Re-enter Password</label>
                <input type="password" class="form-control" name="rePassword" placeholder="Re-enter Password"
                    id="password2" value="">
            </div>
            <span id="msgpassword"></span>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="dropdownCheck">
                <label class="form-check-label" for="dropdownCheck">
                    Remember me
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>

            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="http://localhost:5000/login">Already have an account? Login here</a>

        </form>
    </div>
    <br><br><br><br><br><br><br><br><br><br>
    {{>footer}}

    <script>

        /// validation of firstName, lastName, email, password and phone_number

        function myFunc() {
            var regName = /^[a-zA-Z]+$/;
            var name = document.getElementById('checkfirst').value;
            var name_last = document.getElementById('checklast').value;
            var password_1 = document.getElementById('password1').value;
            var password_2 = document.getElementById('password2').value;
            var phone_number = document.getElementById('phone').value;

            if (name == "") {
                alert('Please enter your first name');
                return false;
            }

            if (name_last == "") {
                alert('Please enter your last name');
                return false
            }

            if (!regName.test(name)) {
                alert('Only alphabtes are allowed.');
                document.getElementById('checkfirst').focus();
                return false;
            }

            if (!regName.test(name_last)) {
                alert('Only alphabtes are allowed.');
                document.getElementById('checklast').focus();
                return false;
            }

            if (password_1 == "") {
                alert('Password cannot be blank');
                return false;
            }

            if (password_1.length < 6 && password_1.length > 25) {
                alert('Password should be between 6 and 25 ')
            }

            if (password_1 != password_2) {
                alert('Password mismatch');
                document.getElementById('password1').focus();
                return false;
            }

            if (phone_number.length < 10 || phone_number.length > 10) {
                alert('Phone number must be 10 digits');
                return false;
            }

        }
    </script>
</body>

</html>